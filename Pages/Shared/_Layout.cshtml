<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FunctionDocs</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FunctionsApp.styles.css" asp-append-version="true" />

<style>
    html, body {
        width: 100vw;
        max-width: 100vw;
        overflow-x: hidden;
        height: 100%;
    }

    body {
        background-color: #f4f6f8;
        min-height: 100vh;
    }

    .sidebar {
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        width: 230px;
        background: #fff;
        border-right: 1px solid #e5e7eb;
        box-shadow: 2px 0 8px rgba(0,0,0,0.03);
        z-index: 1040;
        display: flex;
        flex-direction: column;
    }

    .sidebar .sidebar-brand {
        font-weight: 700;
        font-size: 1.4rem;
        color: #007bff;
        padding: 1.5rem 1.5rem 1rem 1.5rem;
        letter-spacing: 1px;
        text-decoration: none;
        border-bottom: 1px solid #f0f0f0;
    }

    .sidebar a {
        display: block;
        padding: 0.75rem 1.5rem;
        color: #333;
        text-decoration: none;
        border-radius: 4px;
        margin: 0 0.5rem;
        transition: background 0.15s, color 0.15s;
    }

    .sidebar a:hover, .sidebar a.active {
        background-color: #f0f4ff;
        color: #007bff;
    }

    .main-content {
        margin-left: 230px;
        padding: 2rem;
        min-height: 100vh;
        transition: margin-left 0.2s;
        width: calc(100vw - 230px);
        max-width: calc(100vw - 230px);
        overflow-x: hidden;
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .footer {
        position: fixed;
        left: 230px;
        bottom: 0;
        width: calc(100vw - 230px);
        background-color: #fff;
        border-top: 1px solid #e5e7eb;
        padding: 1rem 0;
        text-align: center;
        z-index: 2000;
    }

    @@media (max-width: 991.98px) {
        .sidebar {
            display: none;
        }
        .main-content {
            margin-left: 0;
            padding: 1rem;
            width: 100vw;
            max-width: 100vw;
        }
        .footer {
            left: 0;
            width: 100vw;
        }
    }

    .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1050;
        background: #fff;
        border-bottom: 1px solid #e5e7eb;
    }

    .navbar-brand {
        font-weight: 700;
        color: #007bff !important;
        letter-spacing: 1px;
    }
</style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Mobile Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light d-lg-none">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">FunctionDocs</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNav" aria-controls="mobileNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mobileNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/AddFunction">Add Function</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar (desktop only) -->
    <div class="sidebar d-none d-lg-flex flex-column">
        <a class="sidebar-brand" asp-page="/Index">FunctionDocs</a>
        <a asp-page="/Index" class="@(Context.Request.Path == "/Index" ? "active" : "")">Home</a>
        <a asp-page="/About" class="@(Context.Request.Path == "/About" ? "active" : "")">About</a>
        <a asp-page="/AddFunction" class="@(Context.Request.Path == "/AddFunction" ? "active" : "")">Add Function</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted border-top">
        <div class="container">
            &copy; 2025 iFerf. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>